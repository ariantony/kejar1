<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.klola.projecthappybirthday.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/kejar"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Birthday"
        android:id="@+id/ulangtahun"
        android:textSize="36dp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:padding="20dp"
        /> 

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Your Friend"
        android:id="@+id/from_friend"
        android:textSize="36dp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:layout_marginTop="158dp"
        android:layout_below="@+id/ulangtahun"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
